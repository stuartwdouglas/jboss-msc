RULE createCountdown
CLASS org.jboss.msc.racecondition.DependentRemovedWhileStartingTestCase
METHOD testRemoveWhileServiceStarts
AT ENTRY
BIND NOTHING
IF TRUE
DO
   createCountDown("count", 1);
ENDRULE

RULE delay remove task
CLASS org.jboss.msc.service.ServiceControllerImpl$RemoveTask
METHOD run
AT ENTRY
BIND NOTHING
IF $0.this$0.primaryRegistration.name.toString().contains("dependee")
DO
   debug("sleeping in remove task for dependee"),
   Thread.sleep(200);
ENDRULE

RULE signal unavailable done
CLASS org.jboss.msc.service.ServiceControllerImpl$ServiceUnavailableTask
METHOD run
AT EXIT
BIND NOTHING
IF $0.this$0.primaryRegistration.name.toString().contains("dependee") and not countDown("count")
DO
   debug("signal wake for dependee unregistered"),
   signalWake("dependee-unregistered", true);
ENDRULE



RULE wait for signal to install
CLASS org.jboss.msc.racecondition.DependentRemovedWhileStartingTestCase
METHOD doServiceInstall
AT ENTRY
BIND NOTHING
IF TRUE
DO
   debug("waiting for signal"),
   waitFor("dependee-unregistered");
ENDRULE
